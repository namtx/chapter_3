<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gavatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t("show_follow.view_profile"), @user %></span>
      <span><b><%= t "show_follow.microposts" %></b>
        <%= @micropost_quantity %>
      </span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gavatar_for(user, size: Settings.gavatar_size.size_30),
              user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users_with_paginate.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users_with_paginate %>
    <% end %>
  </div>
</div>
