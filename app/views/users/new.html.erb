<%= provide :title, t("signup_page.title") %>
<h1><%= t "signup_page.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t("signup_page.confirmation")%>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t("signup_page.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
