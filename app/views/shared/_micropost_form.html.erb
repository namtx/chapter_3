<%= form_for @micropost, html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("microposts_form.compose") %>
  </div>
  <%= f.submit t("microposts_form.post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpg, iamge/gif, image/jpeg, image/png" %>
  </span>
<% end %>
